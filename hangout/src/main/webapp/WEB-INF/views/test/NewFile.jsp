<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" type="text/css" href="/resources/tags/bootstrap-tags.css" />
<script src='/resources/tags/bootstrap-tags.min.js'></script>
<script src='/resources/tags/bootstrap-tags.js'></script>

<title>Insert title here</title>
</head>
<body>


<input type="text" value="Amsterdam,Washington" data-role="tagsinput" name="hotag" id="hotag" />
<script>

var citynames = new Bloodhound({
  datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
  queryTokenizer: Bloodhound.tokenizers.whitespace,
  prefetch: {
    url: '/resources/tags/citynames.json',
    filter: function(list) {
      return $.map(list, function(cityname) {
        return { name: cityname }; });
    }
  }
});
citynames.initialize();

$('hotag').tagsinput({
  typeaheadjs: {
    name: 'citynames',
    displayKey: 'name',
    valueKey: 'name',
    source: citynames.ttAdapter()
  }
});
</script>
</body>
</html>